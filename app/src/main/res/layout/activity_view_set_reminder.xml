<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homescreenmenu"
    tools:context=".activities.ViewSetReminderActivity">

    <ImageView
        android:id="@+id/thoranam"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/thoranam1" />

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reminder_details"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goto_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="gotoHome"
                android:text="@string/goto_home"
                android:textColor="@color/labelcolor" />

            <Button
                android:id="@+id/create_another"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="gotoViewReminders"
                android:text="@string/view_reminder"
                android:textColor="@color/labelcolor" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/reminder_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontalline"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/booking_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vsr_days_left">

                <TextView
                    android:id="@+id/booking_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/booking_time"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/vsr_booking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/booking_time_label"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:hint="@string/dummy"
                    android:textAlignment="center"
                    android:textColor="@color/labelcolor"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vsr_days_left"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/booking_time_layout"
                android:layout_toRightOf="@id/booking_time_layout">

                <TextView
                    android:id="@+id/reminder_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/reminder_time_label"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/vsr_reminder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reminder_time_label"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:hint="@string/dummy"
                    android:textAlignment="center"
                    android:textColor="@color/labelcolor"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/vsr_reminder_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reminder_type_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="@string/dummy"
                android:textColor="@color/labelcolor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/travel_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vsr_reminder_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/travel_date_label"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/vsr_travel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/travel_date_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:hint="@string/dummy"
                android:textAlignment="center"
                android:textColor="@color/labelcolor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reminder_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vsr_travel_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/booking_date_label"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/vsr_reminder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reminder_date_label"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:hint="@string/dummy"
                android:textAlignment="center"
                android:textColor="@color/labelcolor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vsr_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vsr_reminder_date"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:hint="@string/dummy"
                android:textAlignment="center"
                android:textColor="@color/labelcolor"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/reminder_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="@string/type_label"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/vsr_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="@string/dummy"
            android:textAlignment="center"
            android:textColor="@color/colorRedLikeBorder"
            android:textSize="25sp" />

        <View
            android:id="@+id/horizontalline"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_below="@id/vsr_event_title"
            android:layout_centerHorizontal="true"
            android:background="@color/sortBarLine" />

    </RelativeLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/ad_unit_id" />

</RelativeLayout>